---
const pathname = new URL(Astro.request.url).pathname;

const items = [
  { name: "Home", url: "/" },
  { name: "Islands", url: "/islands/" },
  { name: "Content", url: "/content/" },
  { name: "State", url: "/state/" },
  { name: "Images", url: "/images/" },
  { name: "View transitions", url: "/view-transitions/" },
];
---

<nav class="flex flex-row gap-4">
  {
    items.map((item) => {
      const isActive =
        item.url === "/" ? pathname === item.url : pathname.includes(item.url);
      return (
        <a href={item.url} class={isActive ? "text-white underline" : ""}>
          {item.name}
        </a>
      );
    })
  }
</nav>
